{
  "name": "YouTube Focus",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "Hide suggested videos and comments",
  "homepage_url": "https://rmcvey.github.io/youtube-focus",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "css": [
        "style/youtube.css"
      ]
    }
  ]
}
